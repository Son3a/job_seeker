<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textTitleGeneration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin chung"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageTimeWork"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_experience"
            android:tint="@color/green"
            app:layout_constraintBottom_toBottomOf="@+id/textTimeWork"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textTitleTimeWork" />

        <TextView
            android:id="@+id/textTitleTimeWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Thời gian làm việc"
            android:textColor="@color/secondary_text"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/imageTimeWork"
            app:layout_constraintTop_toBottomOf="@+id/textTitleGeneration" />

        <TextView
            android:id="@+id/textTimeWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dưới 1 năm"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/textTitleTimeWork"
            app:layout_constraintTop_toBottomOf="@+id/textTitleTimeWork" />
        <!--    \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\-->
        <ImageView
            android:id="@+id/imageGender"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_gender"
            android:tint="@color/green"
            app:layout_constraintBottom_toBottomOf="@+id/textTitleGender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textGender" />

        <TextView
            android:id="@+id/textTitleGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Giới tính"
            android:textColor="@color/secondary_text"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/imageGender"
            app:layout_constraintTop_toBottomOf="@+id/textTimeWork" />

        <TextView
            android:id="@+id/textGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không yêu cầu"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/textTitleGender"
            app:layout_constraintTop_toBottomOf="@+id/textTitleGender" />

        <!--    \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\-->

        <ImageView
            android:id="@+id/imageTypeJob"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_type_job"
            android:tint="@color/green"
            app:layout_constraintBottom_toBottomOf="@+id/textTitleTypeJob"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textTypeJob" />

        <TextView
            android:id="@+id/textTitleTypeJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Ngành nghề"
            android:textColor="@color/secondary_text"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/imageGender"
            app:layout_constraintTop_toBottomOf="@+id/textGender" />

        <TextView
            android:id="@+id/textTypeJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Công nghệ thông tin"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/textTitleTypeJob"
            app:layout_constraintTop_toBottomOf="@+id/textTitleTypeJob" />

        <TextView
            android:id="@+id/textTitleDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mô tả công việc"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTypeJob" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/secondary_text"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTitleDescription" />

        <TextView
            android:id="@+id/textTitleRequire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Yêu cầu ứng viên"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDescription" />

        <TextView
            android:id="@+id/textRequire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/secondary_text"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTitleRequire" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>