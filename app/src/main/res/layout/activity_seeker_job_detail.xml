<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    Header-->
    <RelativeLayout
        android:id="@+id/body_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_main"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/txt_name_job"
                style="@style/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nodejs Developer" />

            <ImageView
                android:id="@+id/ic_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_share" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/header"
            android:background="#D4D4D4" />

        <LinearLayout
            android:id="@+id/body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_job"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name_job_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nodejs Developer"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_company_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="MONSTAR LAB"
                    android:textColor="@color/blue_main"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_place_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hà Nội, Việt Nam"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/body1"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="#D4D4D4" />

        <LinearLayout
            android:id="@+id/body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_salary_detail"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_salary"
                android:drawablePadding="15dp"
                android:text="VND 12.000.000 - 18.000.000/tháng" />

            <TextView
                android:id="@+id/txt_type_job_detail"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_job"
                android:drawablePadding="15dp"
                android:text="Software Engineering" />

            <TextView
                android:id="@+id/txt_type_job_time_detail"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_type_job"
                android:drawablePadding="15dp"
                android:text="Toàn thời gian" />

            <TextView
                android:id="@+id/txt_experience_detail"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_experience"
                android:drawablePadding="15dp"
                android:text="0-1 năm knh nghiệm" />

            <TextView
                android:id="@+id/txt_time_updated_detail"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_type_job_time"
                android:drawablePadding="15dp"
                android:text="Đăng 8 tháng trước - Cập nhật 6 giờ trước" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/body2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D4D4D4" />

        <LinearLayout
            android:id="@+id/body3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả công việc"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Địa điểm làm việc:" />

            <TextView
                android:id="@+id/tv_address_detail"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="\u25CF    Hà Nội: 647 Lý Thường Kiệt, Phường 11, Tân Bình" />

            <TextView
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mô tả công việc:" />

            <TextView
                android:id="@+id/tv_desc_job_detail"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:inputType="textMultiLine"
                android:text="\u25CF    Phân tích yêu cầu, thiết kế cơ sở dữ liệu\n\u25CF    Tìm hiểu, ứng dụng các công nghệ mới" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/body3"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="#D4D4D4" />

        <LinearLayout
            android:id="@+id/body4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line4"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kĩ năng yêu câu"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_request_skill"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:inputType="textMultiLine"
                android:text="\u25CF    Phân tích yêu cầu, thiết kế cơ sở dữ liệu\n\u25CF    Tìm hiểu, ứng dụng các công nghệ mới" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/body4">

            <Button
                android:id="@+id/btn_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:backgroundTint="@color/blue_main"
                android:text="ỨNG TUYỂN NGAY"
                android:textSize="16sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:backgroundTint="@color/blue_main"
                android:text="HỦY ỨNG TUYỂN"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"/>
        </FrameLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/idLoadingPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>