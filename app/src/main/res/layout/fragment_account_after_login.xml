<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F0"
    android:orientation="vertical">

    <TextView
        style="@style/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:gravity="center"
        android:padding="10dp"
        android:text="Hồ sơ của tôi"
        android:textColor="@color/white"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1D9D9" />

    <TextView
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Tài khoản" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1D9D9" />

    <TextView
        android:id="@+id/tv_my_file"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_register"
        android:drawableRight="@drawable/ic_expend_vertical"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Hồ sơ của tôi" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1D9D9" />

    <TextView
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Cài đặt" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1D9D9" />

    <TextView
        android:id="@+id/tv_change_password"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_change_password"
        android:drawableRight="@drawable/ic_expend_vertical"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Đổi mật khẩu" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1D9D9" />

    <TextView
        android:id="@+id/tv_delete_account"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_delete_recruitment"
        android:drawableRight="@drawable/ic_expend_vertical"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Xóa tài khoản" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1D9D9" />

    <LinearLayout
        android:id="@+id/layout_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:text="Quản lý" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1D9D9" />

        <TextView
            android:id="@+id/tv_statistical"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_statistical"
            android:drawableRight="@drawable/ic_expend_vertical"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Thống kê" />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1D9D9" />



    <Button
        android:id="@+id/btn_logout"
        style="@style/text"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/primary"
        android:gravity="center"
        android:padding="10dp"
        android:text="Đăng xuất"
        android:textColor="#FF9800"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phiên bản v0.0"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Điều khoản sử sụng  |  Chính sách bảo mật"
            android:textColor="@color/black" />
    </LinearLayout>


</LinearLayout>